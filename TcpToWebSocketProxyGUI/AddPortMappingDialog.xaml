<Window x:Class="TcpToWebSocketProxyGUI.AddPortMappingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Port Mapping" Height="233" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Listen Port -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Listen Port:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtListenPort" 
                 PreviewTextInput="Numeric_PreviewTextInput"
                 ToolTip="Enter port number (1-65535)"/>

        <!-- Target IP -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Target IP:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTargetIp" 
                 ToolTip="Enter IP address (e.g., 192.168.1.1 or localhost)"/>

        <!-- Target Port -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Target Port:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtTargetPort" 
                 PreviewTextInput="Numeric_PreviewTextInput"
                 ToolTip="Enter port number (1-65535)"/>

        <!-- Preview -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Mapping:" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtPreview" 
                   FontStyle="Italic" Foreground="Gray" VerticalAlignment="Center"
                   Text="Port → IP:Port"/>

        <!-- Spacer -->
        <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Fill="Transparent"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="BtnOk_Click" IsDefault="True"/>
            <Button Content="Cancel" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>